<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
@using WeddingPlanner.Models
@model Wedding

<partial class="con" name="NavPartial"></partial>
<div class="container mt-5">
<div class="row">
    <div class="col-3"></div>
    <div class="col bg-info rounded-lg mx-1 py-2 text-light">
        <h2>Who, When, and Where?</h2>
        <form asp-action="Creator" asp-controller="Wedding" method="post">
            <div class="form-group">
                <label asp-for="WedderOne"></label>
                <input asp-for="WedderOne" class="form-control">
                <span asp-validation-for="WedderOne" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="WedderTwo"></label>
                <input asp-for="WedderTwo" class="form-control">
                <span asp-validation-for="WedderTwo" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ceremony"></label>
                <input asp-for="Ceremony" class="form-control">
                <span asp-validation-for="Ceremony" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control">
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>
            <input type="hidden" asp-for="UserId" value=@ViewBag.LiveUser>
            <input type="submit" value="Create" class="btn btn-outline-light">
        </form>
    </div>
    <div class="col-3"></div>
</div>
</div>